@model TallerMecanicoMVC.Models.Cita

@{
    ViewBag.Title = "Eliminar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">⚠️ Eliminar Cita</h2>

    <div class="card shadow-lg">
        <div class="card-header bg-dark text-warning">
            ¿Estás seguro de que deseas eliminar esta cita?
        </div>
        <div class="card-body bg-secondary text-white">
            <p><strong>Vehículo:</strong> @Model.Marca - @Model.Modelo (@Model.Placas)</p>
            <p><strong>Fecha y Hora:</strong> @Model.FechaHora.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Estado:</strong> @Model.Estado</p>

            @using (Html.BeginForm("EliminarConfirmado", "Citas", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.IdCita)

                <div class="text-center">
                    <button type="submit" class="btn btn-danger">🗑️ Eliminar</button>
                    <a href="@Url.Action("Index")" class="btn btn-light">⬅️ Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>
