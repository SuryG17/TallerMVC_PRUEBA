@model TallerMecanicoMVC.Models.Cita

@{
    ViewBag.Title = "Editar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-warning">✏️ Editar Cita</h2>

    <div class="card shadow-lg">
        <div class="card-header bg-dark text-warning">
            📆 Modificar Información de la Cita
        </div>
        <div class="card-body bg-secondary text-white">
            @using (Html.BeginForm("Editar", "Citas", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.IdCita)

                <div class="mb-3">
                    <label class="form-label">Vehículo</label>
                    @Html.DropDownList("IdVehiculo", ViewBag.Vehiculos as SelectList, "Seleccione un vehículo", new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha y Hora</label>
                    @Html.TextBoxFor(m => m.FechaHora, new { @class = "form-control", type = "datetime-local", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    @Html.DropDownListFor(m => m.Estado, new SelectList(new[] { "Pendiente", "Aprobada", "Rechazada" }), new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Comentarios</label>
                    @Html.TextAreaFor(m => m.Comentarios, new { @class = "form-control", rows = 3 })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning text-dark">✔️ Guardar Cambios</button>
                    <a href="@Url.Action("Index")" class="btn btn-light">⬅️ Volver</a>
                </div>
            }
        </div>
    </div>
</div>
