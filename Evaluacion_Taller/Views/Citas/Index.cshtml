@model List<TallerMecanicoMVC.Models.Cita>

@{
    ViewBag.Title = "Listado de Citas";
    Layout = null;  /* Esto elimina el layout que contiene la barra de navegación */
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Listado de Citas - Taller Mecánico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <style>
        /* Estilo General */
        body {
            font-family: Arial, sans-serif;
            background: url('https://plus.unsplash.com/premium_photo-1677009835876-4a29ddc4cc2c?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .citas-container {
            width: 90%;
            margin: 40px auto;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        .citas-header {
            background-color: #021730; /* Azul oscuro */
            color: #F9CD16; /* Amarillo mecánico */
            padding: 20px;
            border-radius: 10px 10px 0 0;
            text-align: center;
        }

            .citas-header h2 {
                font-size: 28px;
                font-weight: bold;
                margin: 0;
            }

        .btn-agendar {
            background-color: #F9CD16;
            color: #021730;
            font-weight: bold;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 8px;
        }

            .btn-agendar:hover {
                background-color: #d9b013;
                color: #021730;
            }

        .table-container {
            margin-top: 20px;
        }

        .table {
            background-color: #ffffff;
            color: #000;
            border-radius: 8px;
            overflow: hidden;
        }

            .table th {
                background-color: #F9CD16;
                color: black;
                text-align: center;
            }

            .table td {
                text-align: center;
                vertical-align: middle;
            }

        .badge {
            font-size: 14px;
            padding: 8px 12px;
            border-radius: 5px;
        }

        .actions a {
            margin: 5px;
        }

        .search-bar {
            width: 300px;
        }

        /* Centrado de la tabla */
        .table-responsive {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>

    <div class="citas-container">
        <div class="citas-header">
            <h2>📅 Listado de Citas</h2>
        </div>

        <div class="d-flex justify-content-between align-items-center p-3">
            <input type="text" class="form-control search-bar" placeholder="Buscar..." />

            <a href="@Url.Action("Crear", "Citas")" class="btn btn-agendar">
                <i class="fas fa-plus-circle"></i> Agendar Nueva Cita
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Vehículo</th>
                        <th>Fecha y Hora</th>
                        <th>Estado</th>
                        <th>Detalles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cita in Model)
                    {
                        <tr>
                            <td>@cita.IdCita</td>
                            <td>@cita.Marca - @cita.Modelo (@cita.Placas)</td>
                            <td>@cita.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge @(cita.Estado == "Aprobada" ? "bg-success" : (cita.Estado == "Rechazada" ? "bg-danger" : "bg-warning"))">
                                    @cita.Estado
                                </span>
                            </td>
                            <td class="actions">
                                @if (Session["TipoUsuario"] != null && Session["TipoUsuario"].ToString() == "Administrador")
                                {
                                    <a href="@Url.Action("Editar", new { id = cita.IdCita })" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i> Editar</a>
                                    <a href="@Url.Action("Eliminar", new { id = cita.IdCita })" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i> Eliminar</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("VerDetalles", new { id = cita.IdCita })" class="btn btn-sm btn-outline-secondary"><i class="fas fa-search"></i> Ver Detalles</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
