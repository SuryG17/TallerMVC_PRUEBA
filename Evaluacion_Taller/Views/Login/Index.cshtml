@{
	ViewBag.Title = "Iniciar Sesión";
	Layout = null; 
}

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Iniciar Sesión</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
	<style>
		body {
			height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			background: linear-gradient(135deg, #ffffff, #007bff);
		}

		.login-container {
			width: 800px;
			background: white;
			border-radius: 10px;
			overflow: hidden;
			display: flex;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}

		.left-side {
			width: 50%;
			padding: 40px;
			text-align: center;
			display: flex;
			flex-direction: column;
			justify-content: center;
			background-color: #f8f9fa;
		}

		.right-side {
			width: 50%;
			padding: 40px;
			background-color: #007bff;
			color: white;
		}

		.login-form input {
			margin-bottom: 15px;
		}

		.btn-primary {
			width: 100%;
			font-size: 18px;
		}

		.btn-secondary {
			width: 100%;
			font-size: 14px;
			background-color: transparent;
			border: 1px solid white;
			color: white;
		}

			.btn-secondary:hover {
				background-color: white;
				color: #007bff;
			}
	</style>
</head>
<body>

	<div class="login-container">
		<!-- Lado Izquierdo: Información -->
		<div class="left-side">
			<h2>Comienza a gestionar tu negocio</h2>
			<p>Regístrate para administrar clientes, citas y más.</p>
			<img src="https://cdn-icons-png.flaticon.com/512/3081/3081192.png" width="100" />
		</div>

		<!-- Lado Derecho: Login -->
		<div class="right-side">
			<h3 class="text-center">¡Iniciar Sesión!</h3>
			<p class="text-center">Ingresa tus credenciales</p>

			@if (ViewBag.Error != null)
			{
				<div class="alert alert-danger">@ViewBag.Error</div>
			}

			@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
			{
				<label>Email</label>
				@Html.TextBox("Email", "", new { @class = "form-control", placeholder = "Ingrese su correo", type = "email", required = "required" })

				<label>Contraseña</label>
				@Html.Password("Contraseña", "", new { @class = "form-control", placeholder = "Ingrese su contraseña", required = "required" })

				<button type="submit" class="btn btn-primary">INGRESAR</button>

				<div class="mt-3 text-center">
					<a href="@Url.Action("Registro", "Clientes")" class="btn btn-secondary">Registrarse</a>
				</div>
			}
		</div>
	</div>

</body>
</html>
