@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Iniciar Sesión - Taller Mecánico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Estilo General */
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: url('https://images.unsplash.com/photo-1571689936040-130028421e4e') no-repeat center center;
            background-size: cover;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            width: 900px;
            background: #021730; /* Azul oscuro */
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        /* Lado Izquierdo: Información */
        .left-side {
            width: 50%;
            padding: 40px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: #F9CD16; /* Amarillo mecánico */
            color: #000;
        }

            .left-side h2 {
                font-weight: bold;
                margin-bottom: 15px;
            }

            .left-side p {
                font-size: 14px;
                margin-bottom: 20px;
            }

            .left-side img {
                width: 140px;
                margin-top: 10px;
            }

        /* Lado Derecho: Formulario */
        .right-side {
            width: 50%;
            padding: 40px;
            background-color: #58606D; /* Gris oscuro */
            color: white;
        }

            .right-side h3 {
                color: #F9CD16;
                text-align: center;
                font-weight: bold;
                margin-bottom: 20px;
            }

        .login-form input {
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
            padding: 10px;
            background: #B3B3B3;
            color: black;
            width: 100%;
        }

        .password-container {
            position: relative;
        }

        .password-container input {
            width: 100%;
            padding-right: 40px;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .btn-primary {
            width: 100%;
            font-size: 18px;
            background-color: #F9CD16;
            border: none;
            color: black;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #d9b013;
            }

        .btn-secondary {
            width: 100%;
            font-size: 14px;
            background-color: transparent;
            border: 2px solid #F9CD16;
            color: #F9CD16;
            margin-top: 10px;
        }

            .btn-secondary:hover {
                background-color: #F9CD16;
                color: black;
            }

        .forgot-password {
            display: block;
            text-align: center;
            margin-top: 10px;
            color: #F9CD16;
            font-size: 14px;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="login-container">
        <!-- Lado Izquierdo: Información -->
        <div class="left-side">
            <h2>Bienvenido al Taller</h2>
            <p>Inicia o registrate para agendar o ver el estatus de tu cita.</p>
            <img src="https://cdn-icons-png.flaticon.com/512/3081/3081192.png" />
        </div>

        <!-- Lado Derecho: Login -->
        <div class="right-side">
            <h3>¡Iniciar Sesión!</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
            {
                <label>Email</label>
                @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "Ingrese su correo", type = "email", required = "required" })

                <label>Contraseña</label>
                <div class="password-container">
                    @Html.Password("Contraseña", "", new { @class = "form-control", placeholder = "Ingrese su contraseña", required = "required" })
                    <span class="toggle-password" onclick="togglePassword()">👁️</span>
                </div>

                <a href="@Url.Action("Index", "Citas")" class="btn btn-primary">INGRESAR</a>

                <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>

                <div class="mt-3 text-center">
                    <a href="@Url.Action("Registro", "Clientes")" class="btn btn-secondary">Registrarse</a>
                </div>
            }
        </div>
    </div>

    <script>
        function togglePassword() {
            let passwordField = document.querySelector("input[name='Contraseña']");
            let icon = document.querySelector(".toggle-password");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.textContent = "🙈";
            } else {
                passwordField.type = "password";
                icon.textContent = "👁️";
            }
        }
    </script>

</body>
</html>
