@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Iniciar Sesión - Taller Mecánico</title>

    <!-- Bootstrap y FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: url('https://images.unsplash.com/photo-1517048676732-d65bc937f952') no-repeat center center;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            width: 900px;
            background: #021730;
            border-radius: 10px;
            display: flex;
            flex-wrap: wrap;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .left-side, .right-side {
            width: 50%;
            padding: 40px;
        }

    .left-side {
    background: repeating-linear-gradient(
        45deg, 
        #FFE680, /* Amarillo pastel */
        #FFE680 10px, 
        #F9CD16 10px,   
        #F9CD16 20px
    );
    color: #000;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}




        .left-side h2 {
            font-weight: bold;
            margin-bottom: 15px;
        }

        .left-side img {
            width: 140px;
            margin-top: 20px;
        }

        .right-side {
            background-color: #58606D;
            color: white;
        }

        .right-side h3 {
            color: #F9CD16;
            font-weight: bold;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-control {
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
            background: #B3B3B3;
            color: black;
        }

        .password-container {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #000;
        }

        .btn-primary {
            background-color: #F9CD16;
            color: #000;
            font-weight: bold;
            width: 100%;
            border: none;
        }

        .btn-primary:hover {
            background-color: #d9b013;
        }

        .btn-secondary {
            width: 100%;
            margin-top: 10px;
            background: transparent;
            border: 2px solid #F9CD16;
            color: #F9CD16;
        }

        .btn-secondary:hover {
            background-color: #F9CD16;
            color: black;
        }

        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
            }

            .left-side, .right-side {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>
<body>

    
    <main class="login-container">
        <section class="left-side">
            <h2>Bienvenido al Taller</h2>
            <center>
                <p>Inicia sesión o regístrate para agendar o ver el estatus de tu cita.</p>

            </center>
            <img src="https://cdn-icons-png.flaticon.com/512/3627/3627903.png" alt="Ícono de pistón" width="100">
        </section>

        <section class="right-side">
            <h3>¡Iniciar Sesión!</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center fw-bold mb-3">
                    @ViewBag.Error
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center fw-bold mb-3">
                    @TempData["Success"]
                </div>
            }


            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "login-form", autocomplete = "off" }))
            {
                <label for="email">Email</label>
                @Html.TextBox("email", "", new
                {
                    @class = "form-control",
                    placeholder = "Ingrese su correo",
                    type = "email",
                    required = "required",
                    aria_label = "Correo electrónico"
                })

                <label for="password">Contraseña</label>
                <div class="password-container">
                    @Html.Password("password", "", new
                    {
                        @class = "form-control",
                        placeholder = "Ingrese su contraseña",
                        required = "required",
                        aria_label = "Contraseña"
                    })
                    <span class="toggle-password"><i class="fas fa-eye"></i></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">INGRESAR</button>

                <div class="mt-3 text-center">
                    <a href="@Url.Action("Registro", "Clientes")" class="btn btn-secondary">Registrarse</a>
                </div>
            }
        </section>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleIcon = document.querySelector(".toggle-password i");
            const passwordInput = document.querySelector("input[name='password']");

            document.querySelector(".toggle-password").addEventListener("click", function () {
                const type = passwordInput.type === "password" ? "text" : "password";
                passwordInput.type = type;
                toggleIcon.classList.toggle("fa-eye");
                toggleIcon.classList.toggle("fa-eye-slash");
            });
        });
    </script>

</body>
</html>
