@model TallerMecanicoMVC.Models.Cliente

@{
	ViewBag.Title = "Registro de Cliente";
}

<h2>Registro de Cliente</h2>

@if (ViewBag.Error != null)
{
	<div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Success != null)
{
	<div class="alert alert-success">@ViewBag.Success</div>
}

@using (Html.BeginForm())
{
	<div class="form-group">
		<label>Nombre:</label>
		@Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
		@Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		<label>Apellido:</label>
		@Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", required = "required" })
		@Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		<label>Email:</label>
		@Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
		@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		<label>Teléfono:</label>
		@Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", required = "required" })
		@Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		<label>Contraseña:</label>
		@Html.PasswordFor(m => m.Contraseña, new { @class = "form-control", required = "required" })
		@Html.ValidationMessageFor(m => m.Contraseña, "", new { @class = "text-danger" })
	</div>

	<button type="submit" class="btn btn-primary">Registrar</button>
}
